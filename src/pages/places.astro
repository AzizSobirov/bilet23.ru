---
import App from "../App.astro";
---

<App>
  <main class="max-w-full overflow-hidden">
    <!-- Площадки -->
    <section class="mx-auto mt-[30px] xl:mt-[40px] px-5 xl:px-0 max-w-[1160px]">
      <!-- Мероприятия -->
      <div class="relative mt-[50px] lg:mt-[60px]">
        <div class="max-w-[1160px] mx-auto">
          <h1 class="text-2xl lg:text-[32px] font-semibold">Площадки</h1>

          <!-- cards -->
          <div
            class="mt-8 md:mt-10 w-full flex flex-wrap gap-x-5 md:gap-x-6 lg:gap-x-5 gap-y-10"
          >
            {
              Array.from({ length: 12 }).map((item, idx) => (
                <div class="card grow sm:basis-[220px]">
                  <div class="relative h-[154px] sm:h-[120px] xl:h-[154px] rounded-xl overflow-hidden">
                    {idx == 0 && (
                      <img
                        class="w-full h-full object-cover"
                        src="./assets/images/card.png"
                        alt="card"
                      />
                    )}

                    {idx == 1 && (
                      <img
                        class="w-full h-full object-cover"
                        src="./assets/images/card2.png"
                        alt="card"
                      />
                    )}

                    {idx == 2 ? (
                      <img
                        class="w-full h-full object-cover"
                        src="./assets/images/card3.png"
                        alt="card"
                      />
                    ) : (
                      <img
                        class="w-full h-full object-cover"
                        src="./assets/images/card4.png"
                        alt="card"
                      />
                    )}
                  </div>

                  <div class="mt-5 text-xl font-bold">
                    Дворец зимнего спорта «Айсберг»
                  </div>

                  <a
                    href="#"
                    class="mt-5 h-[45px]  rounded-[50px] bg-[#F3F3F3] hover:bg-[#F71313] hover:text-white transition-all duration-200 flex items-center justify-center "
                  >
                    Подробнее
                  </a>
                </div>
              ))
            }
          </div>

          <!-- show more button -->
          <div class="flex justify-center items-center mx-auto">
            <p
              class="text-[#F71313] sm:w-full rounded-[40px] border border-[#F71313] py-[12.5px] text-center hover:bg-[#F71313] hover:text-white transition-all mt-[40px] cursor-pointer w-[300px] mx-auto"
            >
              Смотреть больше мероприятий
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
</App>
