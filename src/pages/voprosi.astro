---
import App from "../App.astro";
---

<App>
  <main class="max-w-full overflow-hidden">
    <!--  Часто задаваемые вопросы -->
    <section class="max-w-[1160px] mx-auto px-5 xl:px-0">
      <div
        class="flex items-start flex-col lg:flex-row gap-[20px] lg:gap-[83px] mt-[60px]"
      >
        <h4 class="text-[24px] font-semibold w-full">
          Часто задаваемые вопросы
        </h4>
        <div class="flex flex-col gap-[10px] w-full">
          <div
            id="dropdown1"
            class="w-full lg:w-[700px] xl:w-[860px] h-[65px] bg-[#F3F3F3] rounded-[10px] flex items-center justify-between px-[30px] cursor-pointer"
          >
            <h3 class="text-[16px] lg:text-[18px] font-medium">Вопрос 1</h3>
            <img src="./assets/images/plus.png" alt="plus" />
          </div>
          <ul id="dropdownContent1" class="hidden list-disc ml-[50px]">
            <li><p>1</p></li>
          </ul>
          <div
            id="dropdown2"
            class="w-full lg:w-[700px] xl:w-[860px] h-[65px] bg-[#F3F3F3] rounded-[10px] flex items-center justify-between px-[30px] cursor-pointer"
          >
            <h3 class="text-[16px] lg:text-[18px] font-medium">Вопрос 2</h3>
            <img src="./assets/images/plus.png" alt="plus" />
          </div>
          <ul id="dropdownContent2" class="hidden list-disc ml-[50px]">
            <li><p>2</p></li>
          </ul>
          <div
            id="dropdown3"
            class="w-full lg:w-[700px] xl:w-[860px] h-[65px] bg-[#F3F3F3] rounded-[10px] flex items-center justify-between px-[30px] cursor-pointer"
          >
            <h3 class="text-[16px] lg:text-[18px] font-medium text-[#F71313]">
              Вопрос 3
            </h3>
            <img src="./assets/images/minus.png" alt="minus" />
          </div>
          <ul id="dropdownContent3" class="list-disc ml-[50px]">
            <li><p>3</p></li>
          </ul>
        </div>
      </div>
    </section>
  </main>
</App>
