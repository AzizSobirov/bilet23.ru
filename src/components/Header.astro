<header class="bg-[#F71313]">
  <div
    class="px-5 xl:px-0 max-w-[1160px] mx-auto py-[26px] flex items-center justify-between"
  >
    <!-- Logo -->
    <a
      href="/"
      class="flex items-center justify-start gap-2 md:gap-[10px] xl:gap-[15px]"
    >
      <img
        src="./assets/images/logo.png"
        alt="logo"
        class="size-[25px] sm:size-auto"
      />
      <div class="font-medium text-[#fff] text-[20px] sm:text-[36px]">
        BILET23.RU
      </div>
    </a>

    <div
      class="bg-transparent xl:bg-[#FFFFFF] xl:rounded-[30px] py-[16px] flex items-center justify-between xl:px-[24px]"
    >
      <input
        type="text"
        class="hidden xl:flex w-[500px] xl:w-[650px] outline-0 border-0"
        placeholder="Поиск по мероприятиям"
      />
      <img
        class="hidden w-[15px] h-[16px] xl:flex"
        src="./assets/images/search.svg"
        alt="search"
      />
      <div class="flex xl:hidden gap-5 md:gap-6 ml-14">
        <img
          class="flex xl:hidden size-[18px]"
          src="./assets/images/search.png"
          alt="search"
          id="searchToggle"
        />
        <div
          class="flex flex-col gap-1 w-[30px] cursor-pointer"
          id="hamburgerMenuToggle"
        >
          <span class="line h-[3px] w-[30px] rounded-md bg-white"></span>
          <span class="line h-[3px] w-[30px] rounded-md bg-white"></span>
          <span class="line h-[3px] w-[30px] rounded-md bg-white"></span>
        </div>
      </div>
    </div>

    <div class="hidden xl:flex gap-2">
      <a href="#">
        <img src="./assets/images/telegram.svg" alt="" />
      </a>
      <a href="#">
        <img src="./assets/images/whatsapp.svg" alt="" />
      </a>
      <a href="#">
        <img src="./assets/images/vk.svg" alt="" />
      </a>
    </div>
  </div>

  <nav
    class="flex items-center justify-between max-w-[1160px] mx-auto xl:hidden"
  >
    <ul
      id="hamburgerMenu"
      class="hidden flex-col items-center justify-center gap-[20px]"
    >
      <li>
        <a href="#" class="text-[18px] text-[#fff] hover:opacity-70"
          >Спектакли</a
        >
      </li>
      <li>
        <a href="#" class="text-[18px] text-[#fff] hover:opacity-70">Концерты</a
        >
      </li>
      <li>
        <a href="#" class="text-[18px] text-[#fff] hover:opacity-70"
          >Фестивали</a
        >
      </li>
      <li>
        <a href="#" class="text-[18px] text-[#fff] hover:opacity-70">Мюзиклы</a>
      </li>
      <li>
        <a href="#" class="text-[18px] text-[#fff] hover:opacity-70">Детям</a>
      </li>
      <li>
        <a href="#" class="text-[18px] text-[#fff] hover:opacity-70">Классика</a
        >
      </li>
      <li>
        <a href="#" class="text-[18px] text-[#fff] hover:opacity-70">Площадки</a
        >
      </li>
      <li>
        <a
          href="tel:79991234567"
          class="text-[#fff] text-[18px] hover:underline">+7 999 123-45-67</a
        >
      </li>
      <li class="mt-2">
        <a
          href="#"
          class="border border-white rounded-[30px] py-[11px] px-[27px] text-[18px] text-white hover:bg-white hover:text-[#F71313] transition-all"
          >Подобрать мероприятие</a
        >
      </li>
    </ul>
  </nav>

  <div id="searchMenu" class="hidden">
    <div
      class="relative w-full flex justify-center items-center gap-[5px] md:gap-[28px] px-[20px]"
    >
      <div class="relative w-full">
        <input
          type="text"
          class="flex w-full rounded-[30px] p-4 pr-[10px] outline-0 border-0 text-[14px] sm:text-[16px] md:text-[18px] relative"
          placeholder="Поиск по мероприятиям"
        />
        <img
          class="w-[20px] md:w-[25px] absolute right-[15px] top-1/2 transform -translate-y-1/2"
          src="./assets/images/search.svg"
          alt="search"
        />
      </div>
      <p
        class="text-white text-[16px] md:text-[18px] cursor-pointer"
        id="closeSearch"
      >
        Назад
      </p>
    </div>
  </div>

  <div class="flex justify-center items-center">
    <div class="max-w-[1160px] w-full justify-between pb-[14px] hidden xl:flex">
      <div
        class="hidden xl:flex px-[30px] xl:px-0 items-center justify-start gap-[40px]"
      >
        <a href="#" class="text-[#fff] hover:opacity-70">Спектакли</a>
        <a href="#" class="text-[#fff] hover:opacity-70">Концерты</a>
        <a href="#" class="text-[#fff] hover:opacity-70">Фестивали</a>
